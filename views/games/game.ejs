<li>
	ID: <%= game.id %>, Name: <%= game.title %>
	<a href="/<%= game.id %>/update">Update</a>
	<!-- This time we're sending a POST request to our route, so we need a form. -->
	<form action="/<%= game.id %>/delete" method="POST" style="display: inline">
		<button
			type="submit"
			onclick="return confirm('Are you sure you want to delete this game?');"
		>
			Delete
		</button>
	</form>
</li>
